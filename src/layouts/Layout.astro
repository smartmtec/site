---
import "../assets/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Smart Mtec - Fabricant de miroirs LED intelligents"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-white text-gray-800 dark:bg-gray-800 dark:text-gray-100 transition-colors duration-300 ease-in-out"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <style is:global>
      /* Styles globaux si n√©cessaires */
      html,
      body {
        height: 100%;
      }
    </style>
  </body>
</html>
