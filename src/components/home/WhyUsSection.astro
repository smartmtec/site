---
// src/components/home/WhyUsSection.astro
const keyPoints = [
  {
    title: "Technologie LED haut de gamme",
    description: "Éclairage performant, durable et économe en énergie pour une ambiance parfaite.",
    // icon: "lightbulb-o" // Placeholder pour icône future
  },
  {
    title: "Personnalisation sur mesure",
    description: "Dimensions, formes, fonctionnalités... nous adaptons chaque miroir à vos besoins spécifiques.",
    // icon: "cogs" 
  },
  {
    title: "Options tactiles ou vocales",
    description: "Contrôlez votre miroir intuitivement grâce à des interfaces modernes et réactives.",
    // icon: "hand-pointer-o" 
  },
  {
    title: "Service et support local",
    description: "Une équipe dédiée au Maroc pour vous conseiller et vous assister à chaque étape.",
    // icon: "users" 
  },
  {
    title: "Livraison rapide",
    description: "Nous nous engageons à livrer vos commandes dans les meilleurs délais.",
    // icon: "truck" 
  }
];
---
<section id="pourquoi-nous-choisir" class="py-16 md:py-24 bg-gradient-to-br from-white via-blue-50 to-purple-50 relative overflow-hidden">
  <!-- Éléments décoratifs -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-blue-100 to-transparent rounded-full opacity-30 -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-purple-100 to-transparent rounded-full opacity-30 translate-y-1/2 -translate-x-1/2"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mb-6">
        ⭐ Nos Avantages
      </div>
      <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-gray-800 via-blue-800 to-purple-800 bg-clip-text text-transparent mb-6">
        Pourquoi choisir Smart Mtec ?
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto text-lg leading-relaxed">
        Nous combinons savoir-faire artisanal, innovation technologique et service client d'excellence pour vous offrir des miroirs intelligents uniques.
      </p>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {keyPoints.map((point, index) => {
        const icons = {
          "Technologie LED haut de gamme": (
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          ),
          "Personnalisation sur mesure": (
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          ),
          "Options tactiles ou vocales": (
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16l13-8L7 4z"></path>
            </svg>
          ),
          "Service et support local": (
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          ),
          "Livraison rapide": (
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          )
        };
        
        return (
          <div class="group bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-2 border border-white/50 relative overflow-hidden animate-fade-in-up" style={`animation-delay: ${index * 150}ms`}>
            <!-- Effet de dégradé en arrière-plan -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <div class="relative z-10">
              <div class="flex items-center mb-6">
                <div class="flex-shrink-0 mr-4">
                  <div class="flex items-center justify-center h-16 w-16 rounded-2xl bg-gradient-to-br from-blue-500 to-purple-600 text-white shadow-lg group-hover:shadow-xl transition-all duration-300 transform group-hover:scale-110">
                    {icons[point.title] || icons["Technologie LED haut de gamme"]}
                  </div>
                </div>
                <h3 class="text-xl font-bold text-gray-800 group-hover:text-blue-700 transition-colors duration-300 leading-tight">
                  {point.title}
                </h3>
              </div>
              
              <p class="text-gray-600 leading-relaxed">
                {point.description}
              </p>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>